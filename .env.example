# Azure Foundry Configuration
FOUNDRY_ENDPOINT=https://<your-region>.api.azureml-test.net
FOUNDRY_API_KEY=<your-api-key>
AZURE_SUBSCRIPTION_ID=<your-subscription-id>
AZURE_RESOURCE_GROUP=rg-rlm-showcase-uksouth
AZURE_LOCATION=uksouth

# Root Agent Configuration
ROOT_AGENT_ENDPOINT=https://<your-region>.api.azureml-test.net/agents/rlm-root-agent
ROOT_AGENT_MODEL=gpt-5.1-chat
ROOT_AGENT_DEPLOYMENT=rlm-root-agent

# Sub-Agent Configuration
SUB_AGENT_ENDPOINT=https://<your-region>.api.azureml-test.net/agents/rlm-analysis-agent
SUB_AGENT_MODEL=gpt-5.1-chat
SUB_AGENT_DEPLOYMENT=rlm-analysis-agent

# RLM Engine Configuration
MAX_TOKENS=10000000
CHUNK_SIZE=100000
CHUNK_OVERLAP=5000
MAX_ITERATIONS=10
TIMEOUT_SECONDS=300

# Azure Storage
STORAGE_ACCOUNT_NAME=<your-storage-account>
STORAGE_ACCOUNT_KEY=<your-storage-key>
STORAGE_CONTAINER=rlm-documents

# Application Insights
APPINSIGHTS_INSTRUMENTATION_KEY=<your-instrumentation-key>
APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=<your-key>

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/rlm_engine.log

# API Configuration
API_HOST=0.0.0.0
API_PORT=7071
API_DEBUG=False

# Environment
ENVIRONMENT=production
