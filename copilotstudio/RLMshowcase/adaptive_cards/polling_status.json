{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "text": "üïµÔ∏è‚Äç‚ôÇÔ∏è RLM Audit Status",
            "weight": "Bolder",
            "size": "Medium"
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Job ID",
                    "value": "${job_id}"
                },
                {
                    "title": "Status",
                    "value": "${status}"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "${message}",
                    "wrap": true,
                    "color": "Accent"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Progress: ${progress_percent}%",
                    "size": "Small",
                    "isSubtle": true
                },
                {
                    "type": "Image",
                    "url": "https://via.placeholder.com/300x10/0078D4/0078D4.png?text=+",
                    "width": "${progress_percent}px",
                    "height": "10px",
                    "horizontalAlignment": "Left"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Live Logs:",
                    "weight": "Bolder",
                    "size": "Small"
                },
                {
                    "type": "TextBlock",
                    "text": "${logs_text}",
                    "wrap": true,
                    "size": "Small",
                    "fontType": "Monospace",
                    "maxLines": 5
                }
            ]
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "üîÑ Refresh Status",
            "data": {
                "action": "refresh"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5"
}